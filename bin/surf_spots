#!/usr/bin/env ruby
require_relative "skiing/version"
require_relative "./skiing/cli"
require_relative "./skiing/ski"

class Surfing::CLI 
  def call 
    menu 
    list_surf
    farewell 
  end
  def list_surf
    # puts "This is a list of the surf spots in California:"
    # puts "
    #   Windansea Beach, La Jolla
    #   Swamiâ€™s, Encinitas
    #   Trestles (San Onofre State Beach), San Clemente 
    #   The Wedge, Newport Beach
    #   Huntington Beach Pier, Huntington Beach
    #   Surfrider Beach, Malibu
    #   Rincon Point, Carpinteria
    #   Pismo Beach Pier, Pismo Beach
    #   Asilomar State Beach, Pacific Grove
    #   Mavericks, Half Moon Bay "
      @beaches = Surfing::Surf.areas
  end 
   def menu 
     input = nil 
     while input != "exit"
     puts "Please select the surf spot you want info about it."
     input = gets.strip.downcase 
     case input 
     when"1"
     puts "more info about ..."
     when "2"
     puts "more info about ..."
     when "list"
       list_surf 
     else 
       puts "Invalid input!"
     end 
   end
   end 
   def farewell 
     puts "Have a great time in Colorado!!"
   end 
end 